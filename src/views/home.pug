doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        title Noom
    body 
        header 
            h1 Noom 
        main
            #welcome 
                form
                    input.roomname_input(type="text", placeholder="room name", required)
                    input.nickname_input(type="text", placeholder="nickname (default: Anonymous)")
                    button Enter Room
                h4 Open Rooms 
                ul
            
            #room 
                h3 room
                ul 
                form#nickname
                    input(type="text", placeholder="nickname", required)
                    button Save
                form#message
                    input(type="text", placeholder="message", required)
                    button Send

